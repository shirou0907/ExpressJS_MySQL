<h1>Thông tin cá nhân</h1>
<hr>
<form class="mt-5" method="POST" action="">
  {{#if info}}
  <div class="alert alert-success" role="alert">
    {{info}}
  </div>
  {{/if}}
  <div class="mt-3 h6">
    <label class="form-label">Full Name</label>
    <input name="full_name" type="text" class="form-control" value="{{data.full_name}}" required>
  </div>
  <div class="mt-3 h6">
    <label class="form-label">Image Link</label>
    <input name="img_url" type="text" class="form-control" value="{{data.img_url}}" required>
  </div>
  <div class="mt-3 h6">
    <label class="form-label">Date of Birth</label>
    <input name="date_of_birth" type="text" class="form-control" value="{{data.date_of_birth}}" required>
  </div>
  <div class="mt-3 h6">
    <label class="form-label">Phone Number</label>
    <input name="phone_number" type="text" class="form-control" value="{{data.phone_number}}" required>
  </div>
  <button type="submit" class="btn btn-primary  mt-4">Submit</button>
</form>