    <div class="row mt-4">
        {{#each product}}
        <div class="col col-lg-4">
            <a href="/products/{{this.name}}" style="display: block; text-decoration: none;">
                <div class="card" style="padding: 10px 20px;">
                <h5 class="card-title" style="color: #333">{{this.name}}</h5>
                <img src="{{this.img_url}}" class="card-img-top" alt="..." style="width: 200px; height: 200px; margin: auto;">
                <div class="card-body">
                    <p class="card-text"> {{this.status}}</p>
                    <p class="card-text" style="color: red; font-size: 20px">Giá bán: {{this.price}}</p>
                </div>
                </div>
            </a>
        </div>
        {{/each}}
    </div>
