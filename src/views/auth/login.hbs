<div class="mt-4" style="padding: 0 100px;">
  <h2>Đăng nhập</h2>
  <hr>

  <form method="POST" action="" class="mt-4" >
    {{#if error}}
    <div class="alert alert-danger" role="alert">
      {{error}}
    </div>
    {{/if}}
    <div class="mb-3" >
      <label for="exampleInputEmail1" class="form-label">Account name</label>
      <input name="account" type="text" class="form-control" id="exampleInputEmail1" value="{{psd}}" required>
    </div>
    <div class="mb-3">
      <label for="exampleInputPassword1" class="form-label">Password</label>
      <input name="password" type="password" class="form-control" id="exampleInputPassword1" required>
    </div>
    <button type="submit" class="btn btn-primary">Login</button>
    <a type="text" class="btn btn-primary" href="login/sign-up">Sign up</a>
  </form>
</div>