<h1>Thay đổi mật khẩu</h1>
<hr>
<form class="mt-5" method="POST" action="">
    {{#if error}}
    <div class="alert alert-danger" role="alert">{{error}}</div>
    {{/if}}
    {{#if info}}
    <div class="alert alert-success" role="alert">{{info}}</div>
    {{/if}}
    <div class="mt-3 h6">
        <label class="form-label">Current Password</label>
        <input name="password" type="password" class="form-control" value="" required>
    </div>
    <div class="mt-3 h6">
        <label class="form-label">New Password</label>
        <input name="new_password" type="password" class="form-control" value="" required>
    </div>
    <div class="mt-3 h6">
        <label class="form-label">Confirm Password</label>
        <input name="confirm_password" type="password" class="form-control" value="" required>
    </div>
    <button type="submit" class="btn btn-primary  mt-4">Change</button>
</form>