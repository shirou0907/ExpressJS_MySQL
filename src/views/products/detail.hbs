
<div class="product-detail d-flex">
    <div class="product-img">
        <img src="{{product/img_url}}" alt="" style="width: 500px">
    </div>
    <div class="product-content d-flex flex-column justify-content-between" style="margin-left: 40px; width: 100%">
        <div class="product-name">
            <h3>{{product.name}}</h3>
        </div>
        <div class="d-flex justify-content-between align-items-center">
            <div class="product-status" style="margin: 20px 0;;max-width: 160px;padding: 8px 16px;background-color: #eb1b1bf2 ;display: block;border-radius: 6px;color: #fff;text-align: center;">
                <span>{{product.status}}</span>
            </div>
            <div class="product-rate">
                <span class="fw-bold">Đánh giá sản phẩm: </span>
                <br>
                {{#if productRate.avg}}
                <span>{{productRate.total}} Rating - {{productRate.avg}} <i class="fas fa-star"></i>  </span>
                {{else}}
                <span>Chưa có đánh giá!</span>
                {{/if}}
            </div>
        </div>
        <div class="product-brand fw-bold mb-4">
            <span>Thương hiệu: {{product.brand}}</span>
        </div>
    
        <div class="product-sell" style="max-width: 240px;padding: 20px 40px;border: 1px solid #ccc;border-radius: 4px;box-shadow: 0 1px 2px #ccc;">
            <div style="color:red">Giá bán : {{product.price}} đ</div>
        </div>
        
        <div class="product-description" style="margin: 20px 0">
            <p>Thông tin chi tiết</p>
            <p>{{product.description}}</p>
        </div>

        <div class="product-amount fw-bold mb-3">
            <span>Sản phẩm hiện có: {{product.amount}}</span>
        </div>
        
        <div>Thanh toán Online, giao hàng nhanh 24h</div>
        <div class="product-add mt-2">
            <form action="/user/cart" method="POST" name="addCart">
                <input type="hidden" name="user_id" value="{{user.id}}"/>
                <input type="hidden" name="product_id" value="{{product.id}}"/>
                <input type="hidden" name="quantity" value="1"/>
                <a class="btn-add" onclick="addCart.submit()" style="display: block;text-align: center;text-decoration: none; color:#fff; padding: 20px 40px;border-radius: 8px; background-color: #eb1b1bf2; max-width: 300px; cursor: pointer;">Thêm vào giỏ hàng</a>
            </form>
            
        </div>
    </div>
</div>

<div class="product-rate mt-5">
    <form method="POST" action="">
        <div class="d-flex">
            <label for="comment">
            <img src="{{user.img_url}}" alt="" style="display:block; width: 40px; height: 40px; border-radius: 50%;">
            </label>
            <input type="text" class="" name="comment" id="" placeholder="Đánh giá của bạn về sản phẩm ?" style= "min-width: 60%;border: none; outline: none; border-bottom: 1px solid #ccc; padding: 0 10px"> 

        </div>
        <div class="mt-3" style="margin-left: 20px;">
            <input type="" name="user_id" id="" value="{{user.id}}" style="display:none">
            <input type="" name="product_id" id="" value="{{product.id}}" style="display:none">
            <label for="">Mức độ hài lòng:</label>
            <select name="rate" id="" style="border: none; outline: none;">
                <option value="1">1</option>
                <option value="2">2</option>
                <option value="3">3</option>
                <option value="4">4</option>
                <option value="5">5</option>
            </select>
            <i class="fas fa-star"></i>
        </div>
        <button type="submit" class="btn btn-secondary mt-4">Send</button>
    </form>
    <hr>

    <div class="rating mt-5">
        <p>Tất cả đánh giá về sản phẩm: </p>
        {{#each rate}}
        <div class="rate-content mt-4" style="border: 1px solid #ccc; padding: 10px; border-radius: 6px; box-shadow: 0 1px 1px #ccc;" >
            <div class="rate-header d-flex justify-content-between">
                <div class="rate-name d-flex align-items-center">
                    <img src="{{this.img_url}}" alt="" style="display: block;width:32px; height:32px; border-radius: 50%">
                    <div class="fw-bold" style="margin: 0 10px">{{this.full_name}}</div>
                    <span>
                        {{this.rate}}
                        <i class="fas fa-star"></i></span>
                </div>
                <div class="rate-date">
                    <div>{{this.create_at}}</div>
                </div>
            </div>
            <div class="rate-body" style="padding: 10px">
                <div>{{this.comment}}</p>
            </div>
        </div>
    </div>
    {{/each }}
</div>
</div>
